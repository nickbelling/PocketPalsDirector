        "@angular/compiler-cli": "^19.0.0",
        "@babel/preset-env": "^7.26.0",
        "@babel/preset-typescript": "^7.26.0",
        "@chromatic-com/storybook": "^3.2.4",
        "@compodoc/compodoc": "^1.1.26",
        "@jest/types": "^29.6.3",
        "@storybook/addon-docs": "^8.5.1",
